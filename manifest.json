{

    "manifest_version": 2,
    "name": "Discord Token Login",
    "version": "1.0.1",

    "description": "Logging into a Discord account using a token, made easier.",
    "icons": {"128": "logo.png"},

    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },

    "background": {
        "scripts": ["script.js"],
        "persistent": true
    },

    "permissions": [
        "http://*.discord.com/*",
        "https://*.discord.com/*"
    ]
}
